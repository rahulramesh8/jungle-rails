<div class="review">

<header>
  <br>
  <h5>Customer: <%= review.user.name%></h5>
</header>

<section>
  <p><%= review.description%></p>

  <p class="rating">
    <%review.rating.times do %>
      <%= fa_icon "star", class: 'fa-lg' %>
    <%end%>
    <%(5 - review.rating).times do %>
      <%= fa_icon "star-o", class: 'fa-lg' %>
    <%end%>
  </p>

</section>


<%if current_user && current_user.id == review.user.id%>
  <footer>
    <%= link_to 'Delete', [@product, @review],
             method: :delete,
             data: { confirm: 'Sure you want to delete review?' }, class: 'btn btn-danger', role: 'button' %>
  </footer>
<%end%>
</div>