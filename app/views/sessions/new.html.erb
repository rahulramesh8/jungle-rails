<% provide(:title, "Login") %>
<h1>Login</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_tag '/login' do %>
      
      Email ID: <%= text_field_tag :email %><br>
      Password: <%= password_field_tag :password %><br><br>
      <%= submit_tag "Submit", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
